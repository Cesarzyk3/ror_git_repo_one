<div class="mt-3">
    <div class="card">
        <div class="card-header"><%= user.email %></div>
        <div class="card-body px-4">
            <table class="table table-bordered">
                <tbody>
                    <tr class="row">
                        <td class="col">
                            Articles: 
                        </td>
                        <td class="col">
                            <%= user.article_count %>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="col">
                            Comments:
                        </td>
                        <td class="col">
                            <%= user.comment_count %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <%= link_to "Profile", user_path(user), class: "btn border bg-white" %>    
            <% if current_user.admin? %>
                <%= link_to "Delete", user, class: "btn border bg-white", method: :delete %>
            <% end %>
        </div>
    </div>
</div>
<br>